{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true
  },
  "parser": "babel-eslint",
  "extends": [
    "plugin:fsd/all",
    "airbnb/base"
  ],
  "plugins": [
    "fsd"
  ],
  "rules": {
    "prefer-destructuring": [
      "error",
      {
        "VariableDeclarator": {
          "array": false,
          "object": true
        },
        "AssignmentExpression": {
          "array": false,
          "object": true
        }
      }
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": false
      }
    ]
  }
}
