mixin header-navigation(links, largeMargin=false)
    -let itemClasses = ["header-navigation__nav-item"]
    if largeMargin
        - itemClasses.push("header-navigation__nav-item_large-margin")


    ul.header-navigation
         each item in links
            - let linkClasses = ["header-navigation__link"]
            if item.current
                - linkClasses.push("header-navigation__link_current")


            if item.dropdowned
                - linkClasses.push("header-navigation__link_dropdowned")
                li.header-navigation__nav-item
                    a(class=linkClasses href=item.link)=item.text
            else
                li(class=itemClasses)
                    a(class=linkClasses href=item.link)=item.text